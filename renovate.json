{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "pre-commit": {
    "enabled": true
  },
  "flux": {
    "managerFilePatterns": [
      "/(?:^|/)gotk-components\\.ya?ml$/",
      "/(?:^|/)[\\w-_]+\\.ya?ml$/"
    ]
  },
  "kubernetes": {
    "managerFilePatterns": ["/\\.yaml$/"],
    "packageRules": [
      {
        "matchPackageNames": ["/^lscr.io\/linuxserver\/.*/"],
        "allowedVersions": "!/(20|18).*/"
      }
    ]
  }
}
